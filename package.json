{
  "name": "task-management-api-Typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Prince Letsyo <55394337+Prince-Letsyo@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev:api": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "dev:worker": "nodemon --watch src --ext ts --exec ts-node src/worker.ts",
    "dev:start-listeners": "nodemon --watch src --ext ts --exec ts-node src/start-listeners.ts",
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:worker\" \"yarn dev:start-listeners\"",
    "db:up": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:full": "yarn prisma:gen && yarn db:push",
    "prisma:gen": "prisma generate",
    "build": "tsc",
    "start:api": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "start:start-listeners": "node dist/start-listeners.js",
    "start": "concurrently \"yarn start:api\" \"yarn start:worker\" \"yarn start:start-listeners\"",
    "prettier": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "lint": "eslint 'src/**/*.{ts,js}' --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.63.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "inversify": "^7.10.2",
    "inversify-express-utils": "^6.5.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.9.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.3",
    "@types/redis": "^4.0.11",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^11.0.0",
    "@types/winston": "^2.4.4",
    "@types/zxcvbn": "^4.4.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
